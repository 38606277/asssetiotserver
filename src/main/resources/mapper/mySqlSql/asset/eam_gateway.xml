<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="eam_gateway">

	<select id="getGatewayById" resultType="map" parameterType="int">
		select gateway_id,address,lng,rng,address_id from eam_gateway where gateway_id = #{gateway_id}
	</select>

	<select id="getGatewayAssetById" resultType="map" parameterType="int">
		SELECT
			eg.gateway_id,
			eg.address,
			eg.lng,
			eg.rng,
			eg.address_id,
			ea.asset_name,
			ea.asset_num,
			ea.iot_num
		FROM
			eam_gateway eg,
			eam_gateway_asset ega,
			eam_asset ea
		WHERE
			eg.gateway_id = ega.gateway_id
			AND ea.asset_id = ega.asset_id
			AND  eg.gateway_id = #{gateway_id}
	</select>

	<insert id="createGatewayHeader" parameterType="Map">
		insert into eam_gateway(gateway_id, address,lng,rng,address_id,states) values(#{gateway_id}, #{address}, #{lng}, #{rng}, #{address_id}, #{states})
	</insert>
	<insert id="createGatewayLines" parameterType="Map">
		insert into eam_gateway_asset(gateway_id,address_id) values(#{gateway_id}, #{address_id})
	</insert>


	<insert id="addEamGateway" parameterType="Map">
		insert into eam_gateway(gateway_id, address,lng,rng,address_id,states) values(#{gateway_id}, #{address}, #{lng}, #{rng}, #{address_id}, #{states})
	</insert>
	<select id="queryCountByGatewayId" resultType="int" parameterType="int">
		select count(gateway_id) from eam_gateway where gateway_id = #{gatewayId}
	</select>
	<select id="countEamGateway" resultType="int">
		select count(gateway_id) from eam_gateway
	</select>
	<delete id="rmEamGateway" parameterType="int">
		delete from eam_gateway where gateway_id=#{gatewayId}
	</delete>

	<select id="listEamGateway" resultType="Map" parameterType="Map">
		select * from eam_gateway e
		where 1=1
		<if test="keyword != null and keyword!=''">  and (e.gateway_id like '%${keyword}%' or e.address like '%${keyword}%') </if>
	</select>


	<select id="listEamGatewayByPage" resultType="Map" parameterType="Map">
		select * from eam_gateway e
		where 1=1
		<if test="gateway_id != null and gateway_id!=''">  and e.gateway_id like '%${gateway_id}%' </if>
		limit #{startIndex},#{perPage}

	</select>

</mapper>
